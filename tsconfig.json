{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["es5", "es6", "es2017", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "plugins": [{
      "name": "typescript-plugin-css-modules",
      "options": {"customMatcher": ".css$"},
    }],
    "typeRoots": [
      "node_modules/@types",
      "src/**/*.d.ts"
    ]
  }
}
