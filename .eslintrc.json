{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {"impliedStrict": true}
  },
  "rules": {
    "block-scoped-var": "warn",
    "comma-dangle": [
      "warn",
      "always-multiline"
    ],
    "no-console": ["warn", {"allow": ["warn", "error"]}],
    "no-var": "warn",
    "semi": [
      "error",
      "never"
    ],
    "strict": "error",
    "no-cond-assign": "off"
  },
  "env": {
    "browser": true,
    "es6": true
  }
}
